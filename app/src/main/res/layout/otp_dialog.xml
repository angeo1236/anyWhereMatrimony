<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/grey_stroke_bg"
    android:layout_height="@dimen/_220sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/otpTitleTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/_12ssp"
        android:layout_height="wrap_content"
        android:text="Please enter the OTP sent to \nthe mobile number"/>

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otpView"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@+id/otpTitleTV"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        app:height="40dp"
        app:width="40dp"
        app:bar_enabled="true"
        app:bar_height="2dp"
        app:length="6"
        app:otp_box_background="@drawable/blue_bg_chips"
        app:otp_text_size="@dimen/_14ssp"
        app:otp_box_background_success="@color/grey"
        app:otp_box_background_error="@color/red"
        app:bar_active_color="@color/transparent"
        app:bar_inactive_color="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintTop_toBottomOf="@+id/otpView"
        android:layout_width="@dimen/_120sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="SUBMIT"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/grey_stroke_bg"
        android:layout_height="@dimen/_35sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>