<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:background="@drawable/white_small_curved_bg"
    android:layout_marginBottom="5dp"
    android:elevation="5dp"
    android:paddingBottom="5dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIV"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/man_dummy"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:tint="@color/red"
            android:src="@drawable/like_icon"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/profileIV"
            android:layout_margin="10dp"
            android:src="@drawable/next_arrow"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Akshay Santhosh"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/profileIV"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:text="SDF112233445"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/poppins_regular"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@+id/nameTV"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ageTV"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="29 Yrs, 175cm, Hindu - Nair"
            android:textColor="@color/dark_grey"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@+id/idTV"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/educationalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:text="M.Sc(Computer Science)"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/poppins_regular"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@+id/ageTV"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dateTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:text="Added date : 4th June 2021"
            android:textColor="@color/dark_grey"
            android:textSize="11sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@+id/educationalTV"
            tools:ignore="RtlSymmetry" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


