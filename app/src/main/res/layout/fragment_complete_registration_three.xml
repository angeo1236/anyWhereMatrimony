<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            tools:context=".view.activity.SignUpActivity">

            <TextView
                android:id="@+id/familyDetailsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pippins_bold"
                android:gravity="center"
                android:text="Other details"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/alternateEmailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                grid:layout_constraintTop_toBottomOf="@+id/familyDetailsTv">

                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Alternate Email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/familyNameEt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nameOfReferenceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                grid:layout_constraintTop_toBottomOf="@+id/alternateEmailLayout">

                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Name of reference in India"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/nameOfReferenceEt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/referencePersonRelationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                grid:layout_constraintTop_toBottomOf="@+id/nameOfReferenceLayout">

                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Reference person relation with candidate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/referencePersonRelationEt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/referencePersonPhoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                grid:layout_constraintTop_toBottomOf="@+id/referencePersonRelationLayout">

                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Reference person Phone number"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/referencePersonPhoneEt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/referenceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                grid:layout_constraintTop_toBottomOf="@+id/referencePersonPhoneLayout">

                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Reference"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/referenceEt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nativeAvailabilityLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                grid:layout_constraintTop_toBottomOf="@+id/referenceLayout">

                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Candidate native availability at native town"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/nativeAvailabilityEt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/nativeAvailabilityLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    grid:layout_constraintTop_toBottomOf="@+id/referencePersonPhoneLayout">

                    <TextView
                        style="@style/completeRegistrationStyle"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Star"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/starSpinner"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:minHeight="@dimen/_35sdp"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv"
                        grid:hintText="Select star" />

                    <TextView
                        style="@style/completeRegistrationStyle"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Type of horoscope"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/horoscopeSpinner"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:minHeight="@dimen/_35sdp"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv"
                        grid:hintText="Select horoscope type" />

                    <TextView
                        style="@style/completeRegistrationStyle"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Horoscope"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/horoscopeBtn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:text="Select Horoscope Image"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />

                    <TextView
                        style="@style/completeRegistrationStyle"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Id proof1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/idProof1Btn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:text="Select ID proof 1"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />

                    <TextView
                        style="@style/completeRegistrationStyle"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Id proof2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/idProof2Btn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:text="Select ID proof 2"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />

                    <TextView
                        style="@style/completeRegistrationStyle"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="About the candidate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:text=""
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />

                    <TextView
                        style="@style/completeRegistrationStyle"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Creator Name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:text=""
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />

                    <TextView
                        style="@style/completeRegistrationStyle"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Creator Phone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:text=""
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />

                    <TextView
                        style="@style/completeRegistrationStyle"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Landline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:text=""
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />

                    <TextView
                        style="@style/completeRegistrationStyle"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Relation  to Candidate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/relationToCandidateSpinner"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:minHeight="@dimen/_35sdp"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv"
                        grid:hintText="Select relation" />

                    <TextView
                        style="@style/completeRegistrationStyle"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Instagram"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:text=""
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />

                    <TextView
                        style="@style/completeRegistrationStyle"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Facebook"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:text=""
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />

                    <TextView
                        style="@style/completeRegistrationStyle"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Twitter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:text=""
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />

                    <TextView
                        style="@style/completeRegistrationStyle"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="LinkedIn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:text=""
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_third"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/next"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/blue"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>




