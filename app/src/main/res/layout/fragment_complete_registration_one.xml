<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            tools:context=".view.activity.SignUpActivity">

            <ImageView
                android:id="@+id/logoIv"
                android:layout_width="240dp"
                android:layout_height="@dimen/logo_height"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/personalDetailsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pippins_bold"
                android:gravity="center"
                android:text="Personal details"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                grid:layout_constraintTop_toBottomOf="@+id/logoIv"
               />


            <LinearLayout
                android:id="@+id/maritalLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personalDetailsTv">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Marital Status"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mobileEt" />
                <com.techxform.anywherematrimony.utils.RadioButtonList
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/maritalRadioButtonList"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/secondMarriageLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/maritalLayout">

                <TextView
                    android:id="@+id/genderLabelTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Willing to second marriage Status"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mobileEt" />

                <com.techxform.anywherematrimony.utils.ToggleButtonGroupTableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/genderLabelTv"
                    app:layout_constraintTop_toBottomOf="@+id/mobileEt"
                   >

                    <TableRow>

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Yes"
                            android:textSize="12sp"
                            />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="No"
                            android:textSize="12sp"
                            />
                    </TableRow>
                </com.techxform.anywherematrimony.utils.ToggleButtonGroupTableLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/complexionLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secondMarriageLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Complexion"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mobileEt" />

                <com.techxform.anywherematrimony.utils.RadioButtonList
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/complexionRadioButtonList"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/bodyTypeLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/complexionLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Body Type"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mobileEt" />

                <com.techxform.anywherematrimony.utils.RadioButtonList
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bodyTypeRadioButtonList"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/physicalStatusLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bodyTypeLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Physical Status"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mobileEt" />

                <com.techxform.anywherematrimony.utils.RadioButtonList
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/physicalStatusRadioButtonList"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/drinkingLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/physicalStatusLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Drinking"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mobileEt" />

                <com.techxform.anywherematrimony.utils.RadioButtonList
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/drinkingRadioButtonList"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/smokingLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/drinkingLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Smoking"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mobileEt" />

                <com.techxform.anywherematrimony.utils.RadioButtonList
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/smokingRadioButtonList"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dietLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/smokingLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Diet"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mobileEt" />

                <com.techxform.anywherematrimony.utils.RadioButtonList
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dietRadioButtonList"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/hobbieLayout"
                grid:layout_constraintTop_toBottomOf="@+id/dietLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/hobbieLabelTv"
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="Hobbies"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/hobbieEt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/othersLayout"
                grid:layout_constraintTop_toBottomOf="@+id/hobbieLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="Others"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/heightSpinner"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:minHeight="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:inputType="textEmailAddress"
                        android:text=""
                        grid:hintText="Height"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        />
                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/weightSpinner"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:minHeight="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:inputType="textEmailAddress"
                        android:text=""
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        grid:hintText="Weight"
                        app:layout_constraintTop_toBottomOf="@+id/emailLabelTv"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        />


                </LinearLayout>
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/bloodGroupSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_35sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    grid:hintText="Blood Group"
                    app:layout_constraintTop_toBottomOf="@+id/emailLabelTv"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/communicationAddressLayout"
                grid:layout_constraintTop_toBottomOf="@+id/othersLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="Communication Address"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/addressEt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/emailLabelTv" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pinCodeLayout"
                grid:layout_constraintTop_toBottomOf="@+id/communicationAddressLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="Pin Code"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/pinCodeEt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                     />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/residencePhoneLayout"
                grid:layout_constraintTop_toBottomOf="@+id/pinCodeLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="Residence Phone Number"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/residencePhone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                     />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/educationSpecializationLayout"
                grid:layout_constraintTop_toBottomOf="@+id/residencePhoneLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="Education With Specialization"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/educationSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_35sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:inputType="textEmailAddress"
                    grid:hintText="Select Education"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/emailLabelTv"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/occupationLayout"
                grid:layout_constraintTop_toBottomOf="@+id/educationSpecializationLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="Occupation"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/occupationSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_35sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:inputType="textEmailAddress"
                    grid:hintText="Select Occupation"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/emailLabelTv"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/workingFirmLayout"
                grid:layout_constraintTop_toBottomOf="@+id/occupationLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="Working Firm"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/workingFirmEt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                     />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/workingPlaceLayout"
                grid:layout_constraintTop_toBottomOf="@+id/workingFirmLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="Working Place"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/workingPlaceEt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                     />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/annualIncomeLayout"
                grid:layout_constraintTop_toBottomOf="@+id/workingPlaceLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="Annual Income"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/annualIncomeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_35sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:inputType="textEmailAddress"
                    grid:hintText="Select Annual Income"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/emailLabelTv"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/employedCategory"
                grid:layout_constraintTop_toBottomOf="@+id/annualIncomeLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/completeRegistrationStyle"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="Employed Category"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileCreatedSpinner" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/employedCategorySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_35sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:inputType="textEmailAddress"
                    grid:hintText="Select Employed Category"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/emailLabelTv"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_first"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/next"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/blue"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>




