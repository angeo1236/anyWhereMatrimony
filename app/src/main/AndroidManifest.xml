        android:theme="@style/Theme.AnyWhereMatrimony">
        <activity
            android:name=".view.activity.InterestListPage"
            android:exported="false" />
        <activity
            android:name=".view.activity.ReligionSelection"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.HomePage"
            android:exported="false" />
        <activity
            android:name=".view.activity.SingleProfileView"
            android:exported="true" />
        <activity
            android:name=".view.activity.NotificationListing"
            android:exported="false" />
        <activity
            android:name=".view.activity.BaseActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.ProfileListing"
            android:exported="true" />
        <activity
            android:name=".view.activity.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.MainActivity"
            android:exported="true" />
    </application>

</manifest>